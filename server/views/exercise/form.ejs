<div class="page-wrapper ">
    <% include ../partials/sidebar %>
    <div class="content-wrapper">
      <% include ../partials/navbar %>
      <div class="container-fluid mt-4">
        <div class="row mt-4 mb-2">
          <div class="col-md-8">
            <div class="page-title-wrapper">
              <h4>Exercise Form</h4>
            </div>
            <p class="text-muted">Lorem ipsum dolor sit amet consectetur adipisicing.</p>
          </div>
          <div class="col-md-4">
            <button type="submit" class="btn btn-primary float-lg-right btn-custom mt-3">
              Save
            </button>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <form action="/account<%= requestURL %>" method="POST">
                  <h4>Exercise Details</h4>
                  <p class="text-muted">Enter your user credentials</p>
                  <div class="form-group">
                    <label for="email">Name</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                      value="<%= typeof email != 'undefined' ? email : '' %>" />
                  </div>
                  <div class="form-group">
                    <label for="videoURL">Video URL</label>
                    <input type="videoURL" id="" name="password" class="form-control"
                      placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                  </div>
                  <div class="form-group">
                    <label for="Category">Category</label>
                    <input type="password" id="" name="password2" class="form-control"
                      placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                  </div>
                  <div class="form-group">
                    <label for="role">Select User Role</label>
                    <select id="role" name="role">
                      <option value="">Select Role</option>
                      <%
                const roles = ['admin', 'manager', 'trainer', 'member']
                roles.forEach( (role) => { 
                %>
                      <option value="<%= typeof role != 'undefined' ? role : 'member' %>">
                        <%= role.charAt(0).toUpperCase() + role.slice(1) %></option>
                      <% }) %>
                    </select>
                  </div>
  
                </form>
              </div>
            </div>
          </div>
          <!-- Column -->
        </div>
        <!-- Row -->
      </div>
    </div>
  </div>