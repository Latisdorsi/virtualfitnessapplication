<section class="login-section">
  <div class="container">
    <div class="row login-body">
      <div class="col-md-5 m-auto">
        <div class="card card-body">
          <img src="/img/anytime_fitness_logo_scaled.png" class="mb-4" alt="">
          <h1 class="mb-3 card-title text-center">Howdy Manager!</h1>
          <h6 class="mb-3 text-center">Please enter your login credentials.</h6>

          <form action="/login" method="POST">
            <div class="form-group mb-4">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
            </div>
            <div class="form-group mb-4">
              <label for="password">Password</label>
              <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
            </div>
            <div class="row mb-2">
              <div class="col-md-5">
                <button class="btn btn-block">Remember Me</button>
              </div>
              <div class="col-md-7">
                <button type="submit" class="btn btn-primary btn-block">Login</button>
              </div>
            </div>
            <hr>
          </form>
          <div class="row text-center">
            <div class="col-md-12">
              <a href="">Forgot Password?</a>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>