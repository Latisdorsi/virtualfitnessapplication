<div class="page-wrapper ">
  <% include ../partials/sidebar %>
  <div class="content-wrapper">
    <% include ../partials/navbar %>
    <div class="container-fluid mt-4">
      <div class="row mt-4 mb-2">
        <div class="col-md-12">
          <div class="page-title-wrapper">
            <h4>Account Details</h4>
          </div>
          <p class="text-muted">Lorem ipsum dolor sit amet consectetur adipisicing.</p> 
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <form action="/account<%= requestURL %>" method="POST">
                <h4>User Credentials</h4>
                <p class="text-muted">Enter your user credentials</p>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                    value="<%= typeof email != 'undefined' ? email : '' %>" />
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" id="password" name="password" class="form-control"
                    placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <div class="form-group">
                  <label for="password2">Confirm Password</label>
                  <input type="password" id="password2" name="password2" class="form-control"
                    placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                </div>
                <div class="form-group">
                  <label for="role">Select User Role</label>
                  <select id="role" name="role">
                    <option value="">Select Role</option>
                    <%
              const roles = ['admin', 'manager', 'trainer', 'member']
              roles.forEach( (role) => { 
              %>
                    <option value="<%= typeof role != 'undefined' ? role : 'member' %>">
                      <%= role.charAt(0).toUpperCase() + role.slice(1) %></option>
                    <% }) %>
                  </select>
                </div>
                <button type="submit" class="btn btn-primary float-lg-right btn-custom">
                  Update
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-4 mb-4">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">

              <h4>Contact Details</h4>
              <p class="text-muted">Lorem ipsum dolor sit amet consectetur adipisicing.</p> 
              <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="name" id="firstName" name="firstName" class="form-control" placeholder="Enter First Name"
                  value="<%= typeof firstName != 'undefined' ? firstName : '' %>" />
              </div>
              <div class="form-group">
                <label for="middleName">Middle Initial</label>
                <input type="name" id="middleName" name="middleName" class="form-control"
                  placeholder="Enter Middle Initial"
                  value="<%= typeof middleName != 'undefined' ? middleName : '' %>" />
              </div>
              <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="name" id="lastName" name="lastName" class="form-control" placeholder="Enter Last Name"
                  value="<%= typeof lastName != 'undefined' ? lastName : '' %>" />
              </div>

              <div class="form-group">
                <label for="lastName">Address</label>
                <input type="name" id="lastName" name="lastName" class="form-control" placeholder="Enter Address"
                  value="<%= typeof lastName != 'undefined' ? lastName : '' %>" />
              </div>

              <div class="form-group">
                <label for="lastName">Mobile Phone</label>
                <input type="name" id="lastName" name="lastName" class="form-control" placeholder="Enter Last Name"
                  value="<%= typeof lastName != 'undefined' ? lastName : '' %>" />
              </div>

              <div class="form-group">
                <label for="lastName">Home Phone</label>
                <input type="name" id="lastName" name="lastName" class="form-control" placeholder="Enter Last Name"
                  value="<%= typeof lastName != 'undefined' ? lastName : '' %>" />
              </div>

              <div class="form-group">
                <label for="lastName">Work Phone</label>
                <input type="name" id="lastName" name="lastName" class="form-control" placeholder="Enter Last Name"
                  value="<%= typeof lastName != 'undefined' ? lastName : '' %>" />
              </div>
              <button type="submit" class="btn btn-primary float-lg-right btn-custom">
                Save
              </button>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">

              <h4>Emergency Contact</h4>
              <p class="text-muted">Lorem ipsum dolor sit amet consectetur adipisicing.</p> 
              <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="name" id="firstName" name="firstName" class="form-control" placeholder="Enter First Name"
                  value="<%= typeof firstName != 'undefined' ? firstName : '' %>" />
              </div>

              <div class="form-group">
                <label for="firstName">Last Name</label>
                <input type="name" id="firstName" name="firstName" class="form-control" placeholder="Enter First Name"
                  value="<%= typeof firstName != 'undefined' ? firstName : '' %>" />
              </div>

              <div class="form-group">
                <label for="firstName">Contact Number</label>
                <input type="name" id="firstName" name="firstName" class="form-control" placeholder="Enter First Name"
                  value="<%= typeof firstName != 'undefined' ? firstName : '' %>" />
              </div>

              <div class="form-group">
                <label for="firstName">Relationship</label>
                <input type="name" id="firstName" name="firstName" class="form-control" placeholder="Enter First Name"
                  value="<%= typeof firstName != 'undefined' ? firstName : '' %>" />
              </div>

              <button type="submit" class="btn btn-primary float-lg-right btn-custom">
                Save
              </button>
              </form>
            </div>
          </div>
          <!-- Card Body End-->
        </div>
        <!-- Card End -->
      </div>
      <!-- Row -->
    </div>
  </div>
</div>